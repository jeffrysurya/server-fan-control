[Unit]
Description=Fan Control Web Application
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/fan-control/backend
ExecStart=/opt/fan-control/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
